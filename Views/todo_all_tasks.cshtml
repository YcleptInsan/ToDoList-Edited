@{
  Layout="Shared/_Layout";
}

<div class="container">
  <p>Your To Do List!</p>
  <ul>
    @foreach(var task in Model)
    {
      <li>@task</li>
    }
  </ul>
  <p><a href="/">Add another task</a></p>
  <form action="/tasks_cleared" method="post">
    <button type="submit" class="btn btn-info">Clear all tasks</button>
  </form>
</div>
