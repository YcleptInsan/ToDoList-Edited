@{
  Layout = "Shared/_Layout.cshtml";
}

<div class="container text-center">
  <h3>Here are all the tasks in this category:</h3>
  @foreach(var task in @Model["tasks"])
  {
    @if(@task.GetExistence())
    {
      <h5>@task.GetDescription()</h5>
      <form action="/tasks/update" method="post">
        <input id='task-id' name='task-id' type='hidden' value='@task.GetId()'>
        <input id='category-id' name='category-id' type='hidden' value='@Model["category"].GetId()'>
        <button type="submit" class="btn btn-danger">Delete task #@task.GetId()</button>
      </form>
    }
  }
  <p><a href='/categories/@Model["category"].GetId()/tasks/new'>Add a new task</a></p>
  <p><a href='/'>Home</a></p>
</div>
